{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 8,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "aarch64-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/aarch64.cmake"
            }
        },
        {
            "name": "aarch64-debug",
            "displayName": "AArch64 Debug",
            "inherits": "aarch64-base",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "aarch64-release",
            "displayName": "AArch64 Release",
            "inherits": "aarch64-base",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        }
    ],
    "buildPresets": [
        {
            "name": "aarch64-debug",
            "configurePreset": "aarch64-debug"
        },
        {
            "name": "aarch64-release",
            "configurePreset": "aarch64-release"
        }
    ]
}